@model IEnumerable<EmprestimoModel>



<div class="container">

    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Empréstimos</h1>
        <div>
            <a class="btn btn-success mx-2" asp-controller="Emprestimo" asp-action="Exportar"><i class="bi bi-file-earmark-plus"></i> Exportar</a>
            <a class="btn btn-success mx-2" asp-controller="Emprestimo" asp-action="Cadastrar"><i class="bi bi-file-earmark-plus"></i> Cadastrar novo empréstimo</a>
        </div>
    </div>


    @if(TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success text-light" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }

    @if(TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger text-light" role="alert">
            @TempData["MensagemErro"]
        </div>
    }

    <table id="emprestimos" class="table table-light table-hover mt-5">
        <thead>
            <tr>
                <th scope="col">Recebedor</th>
                <th scope="col">Fornacedor</th>
                <th scope="col">Jogo</th>
                <th scope="col">Data Empréstimo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @if(Model != null)
            {
                @foreach(var emprestimo in Model)
                {
                    <tr>
                        <td>@emprestimo.Recebedor</td>
                        <td>@emprestimo.Fornecedor</td>
                        <td>@emprestimo.JogoEmprestado</td>
                        <td>@emprestimo.DataAtualizacao</td>
                        <td>
                            <a class="btn btn-warning mx-2" asp-controller="Emprestimo" asp-action="Editar" asp-route-id="@emprestimo.Id"><i class="bi bi-pencil"></i> Editar</a>
                            <a class="btn btn-danger mx-2" asp-controller="Emprestimo" asp-action="Excluir" asp-route-id="@emprestimo.Id"><i class="bi bi-trash"></i> Excluir</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>